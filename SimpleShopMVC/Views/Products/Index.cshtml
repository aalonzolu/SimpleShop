@model List<Product>
@{
    ViewData["Title"] = "Products List";
}

<div class="text-center">
    <h1 class="display-4">Products list</h1>
    
    <!-- Products list with images, prices and add to cart btn with qty -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@product.ImageUrl" alt="Card image cap">
                    <!-- Delete button -->
                    <a asp-action="Remove" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    <div class="card-body">
                        <h5 class="card-title
                        ">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">Add to Cart</a>
                            </div>
                            <small class="text-muted
                            ">USD  @string.Format("{0:C}", @product.Price)</small>
                            
                        </div>
                    </div>
                </div>
            </div>
}
</div>
        <!-- Create product button -->
    <a class="btn btn-primary" asp-action="Create" asp-controller="Products">Create product</a>
</div>
