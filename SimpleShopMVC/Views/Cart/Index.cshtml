@model List<CartItem>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Cart list</h2>

<!-- Render list of cart items with remove action -->

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item.Product.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title
                    ">@item.Product.Name</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="RemoveFromCart" asp-controller="Cart" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Remove from Cart</a>
                        </div>
                        <small class="text-muted
                                            ">USD  @string.Format("{0:C}", @item.Product.Price)</small>
                        <small class="text-muted
                    ">QTY: @item.Quantity</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>